// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TypeClient {
  ENTREPRISE
  PARTICULIER
}

enum StatusClient {
  ACTIF
  INACTIF
  PROSPECT
}

enum StatusContrat {
  BROUILLON
  ACTIF
  SUSPENDU
  TERMINE
}

model Client {
  id          String       @id @default(uuid())
  nom         String
  email       String       @unique
  telephone   String?
  adresse     String?
  typeClient  TypeClient
  status      StatusClient @default(PROSPECT)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  contacts    Contact[]
  contrats    Contrat[]

  @@map("clients")
}

model Contact {
  id          String   @id @default(uuid())
  clientId    String
  nom         String
  prenom      String
  email       String?
  telephone   String?
  poste       String?
  principal   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("contacts")
}

model Contrat {
  id             String        @id @default(uuid())
  clientId       String
  numeroContrat  String        @unique
  titre          String
  dateDebut      DateTime
  dateFin        DateTime?
  montant        Decimal       @db.Decimal(12, 2)
  status         StatusContrat @default(BROUILLON)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  client         Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("contrats")
}
